---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Cookie Policy';
const pageDescription = 'How Listwin Ventures uses cookies and where to review the full consent policy.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <h1 class="text-3xl font-semibold">Cookie Policy</h1>
  <p class="mt-6">
    Our cookie and consent policy is managed through Termageddon. Please wait while the policy loads.
    If it does not load, you can
    <a
      rel="nofollow noopener"
      href="https://app.termageddon.com/api/policy/ZUZvdmFURnZURXh2VUVkVk1sRTlQUT09?h-align=left&amp;h-depth=3&amp;no-title=true&amp;table-style=accordion"
      target="_blank"
    >
      view it directly here
    </a>.
  </p>
</BaseLayout>
