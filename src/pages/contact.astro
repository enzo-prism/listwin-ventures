---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact';
const pageDescription = 'Share your project or investment opportunity with Listwin Ventures.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="space-y-6 rounded-apple bg-white/95 p-6 shadow-panel ring-1 ring-white/60 sm:p-10">
    <h1 class="font-display text-3xl font-semibold text-ink sm:text-4xl">Contact</h1>
    <form class="space-y-6" name="contact" method="post" data-netlify="true">
      <input type="hidden" name="form-name" value="contact" />
      <div class="grid gap-4 md:grid-cols-2">
        <label class="space-y-2 text-sm text-ink/70">
          <span class="font-semibold text-ink">First name</span>
          <input
            class="w-full rounded-[20px] border border-ink/10 bg-white/70 px-4 py-3 text-ink outline-none ring-0 transition focus:border-brand"
            type="text"
            name="firstName"
            required
          />
        </label>
        <label class="space-y-2 text-sm text-ink/70">
          <span class="font-semibold text-ink">Last name</span>
          <input
            class="w-full rounded-[20px] border border-ink/10 bg-white/70 px-4 py-3 text-ink outline-none ring-0 transition focus:border-brand"
            type="text"
            name="lastName"
            required
          />
        </label>
      </div>
      <label class="space-y-2 text-sm text-ink/70">
        <span class="font-semibold text-ink">Organization name</span>
        <input
          class="w-full rounded-[20px] border border-ink/10 bg-white/70 px-4 py-3 text-ink outline-none ring-0 transition focus:border-brand"
          type="text"
          name="organization"
          required
        />
      </label>
      <label class="space-y-2 text-sm text-ink/70">
        <span class="font-semibold text-ink">Email address</span>
        <input
          class="w-full rounded-[20px] border border-ink/10 bg-white/70 px-4 py-3 text-ink outline-none ring-0 transition focus:border-brand"
          type="email"
          name="email"
          required
        />
      </label>
      <label class="space-y-2 text-sm text-ink/70">
        <span class="font-semibold text-ink">Message</span>
        <textarea
          class="min-h-[160px] w-full rounded-[24px] border border-ink/10 bg-white/70 px-4 py-3 text-ink outline-none ring-0 transition focus:border-brand"
          name="message"
          required
        />
      </label>
      <div class="flex flex-wrap justify-between gap-3">
        <button type="submit" class="btn btn-brand">
          Send message
        </button>
      </div>
    </form>
  </section>
</BaseLayout>
