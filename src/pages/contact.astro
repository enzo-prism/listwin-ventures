---
import { buttonVariants } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Textarea } from '@/components/ui/textarea';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact';
const pageDescription = 'Share your project or investment opportunity with Listwin Ventures.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="lv-section">
    <div class="space-y-2">
      <h1 class="lv-heading">Contact</h1>
      <p class="text-sm text-muted-foreground">Tell us what you are building and how we can help.</p>
    </div>

    <form class="space-y-6" name="contact" method="post" data-netlify="true">
      <input type="hidden" name="form-name" value="contact" />

      <div class="grid gap-4 md:grid-cols-2">
        <label class="space-y-2">
          <Label>First name</Label>
          <Input type="text" name="firstName" autoComplete="given-name" required />
        </label>

        <label class="space-y-2">
          <Label>Last name</Label>
          <Input type="text" name="lastName" autoComplete="family-name" required />
        </label>
      </div>

      <label class="space-y-2">
        <Label>Organization name</Label>
        <Input type="text" name="organization" autoComplete="organization" required />
      </label>

      <label class="space-y-2">
        <Label>Email address</Label>
        <Input type="email" name="email" autoComplete="email" inputMode="email" autoCapitalize="none" spellCheck="false" required />
      </label>

      <label class="space-y-2">
        <Label>Message</Label>
        <Textarea className="min-h-[170px]" name="message" required />
      </label>

      <button type="submit" class={buttonVariants({ variant: 'default' })}>
        Send message
      </button>
    </form>
  </section>
</BaseLayout>
