---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroMedia from '../components/HeroMedia.astro';
import { belizeKidsGallery, boardAssets } from '../data/assets';

const pageTitle = 'BelizeKids.org Initiative';
const pageDescription =
  'How BelizeKids.org advances community health, education, and reef conservation across Belize with Stanford partnerships.';

const belizeLogo = boardAssets
  .flatMap((group) => group.items)
  .find((asset) => asset.id === 'belizekids');

const heroImage = belizeKidsGallery[0];

const impactStats = [
  { label: 'clinic visits each year', value: '4,000+', detail: 'Primary care, dental, and ophthalmology touchpoints run with Stanford partners.' },
  { label: 'students supported', value: '1,200+', detail: 'STEM intensives, scholarships, and daily tutoring across the islands.' },
  { label: 'reef projects funded', value: '15', detail: 'Mangrove restoration dives and coral nursery deployments protecting the barrier reef.' },
  { label: 'local partners', value: '25+', detail: 'Belizean schools, hospitals, and NGOs collaborating on the ground.' },
];

const initiatives = [
  {
    title: 'Education & STEM Access',
    summary:
      'Mobile computer labs, robotics workshops, and scholarships help students in San Pedro and surrounding cayes pursue engineering and science degrees.',
    focus: ['STEM summer institutes with Stanford mentors', 'Scholarships for girls in engineering programs', 'Teacher training on project-based learning'],
  },
  {
    title: 'Community Health',
    summary:
      'Clinics bring ophthalmology, dental, and primary care directly to families who otherwise travel hours by boat to reach services.',
    focus: ['Telemedicine follow ups with Bay Area physicians', 'Eye-care screening with Stanford Medicine', 'Nutrition programs co-led with local nurses'],
  },
  {
    title: 'Reef & Conservation',
    summary:
      'Daily dives monitor coral nurseries and mangrove regrowth, pairing tourism jobs with long-term reef stewardship.',
    focus: ['Citizen science expeditions for students', 'Reef-safe entrepreneurship accelerators', 'Joint projects with Hol Chan Marine Reserve'],
  },
];

const stories = [
  {
    title: 'Hol Chan Learning Hub',
    body:
      'We transformed a former ranger outpost into a blended classroom that mixes marine science with coding workshops. Students simulate reef environments on tablets in the morning and gather data underwater in the afternoon.',
  },
  {
    title: 'Mobile Vision Clinics',
    body:
      'In collaboration with Stanford ophthalmology, BelizeKids deploys portable labs that diagnose glaucoma and diabetic retinopathy early. Prescription lenses are produced locally, creating jobs while improving outcomes.',
  },
  {
    title: 'BelizeKids Scholars',
    body:
      'Scholarship recipients receive year-round mentorship, travel stipends, and internships with our partner companies. Graduates now lead local startups, teach STEM, and staff clinics across Belize City and San Pedro.',
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="space-y-10 rounded-apple bg-white/95 p-6 shadow-panel ring-1 ring-white/60 sm:p-10">
    <div class="grid gap-10 lg:grid-cols-[1.05fr_0.95fr] lg:items-center">
      <div class="space-y-6">
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-ink/50">Impact Spotlight</p>
        <h1 class="font-display text-4xl font-semibold text-ink sm:text-5xl">
          BelizeKids.org
        </h1>
        <p class="text-lg text-ink/70">
          BelizeKids is a nonprofit founded by Don Listwin that pairs community health, education access, and reef
          conservation to unlock opportunity for Belizean families. In partnership with Stanford Medicine and local
          NGOs, the team runs mobile clinics, reef science programs, and scholarships from Ambergris Caye to Belize City.
        </p>
        <div class="flex flex-wrap gap-4">
          <a class="btn btn-ink" href="https://belizekids.org/" target="_blank" rel="noopener">
            Visit belizekids.org
          </a>
          {belizeLogo && (
            <a
              class="btn btn-ink"
              href={belizeLogo.href}
              target="_blank"
              rel="noopener"
            >
              Learn about the foundation
            </a>
          )}
        </div>
      </div>
      <div class="grid gap-4 sm:grid-cols-2">
        {heroImage && <HeroMedia asset={heroImage} rounded={false} />}
        {belizeLogo && <HeroMedia asset={belizeLogo} />}
      </div>
    </div>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {impactStats.map((stat) => (
        <article
          class="rounded-[28px] border border-white/80 bg-fog px-5 py-6 text-center shadow"
          key={stat.label}
        >
          <p class="text-3xl font-semibold text-slate-900">{stat.value}</p>
          <p class="text-xs uppercase tracking-[0.3em] text-slate-500">{stat.label}</p>
          <p class="mt-3 text-sm text-slate-600">{stat.detail}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="space-y-10 rounded-apple bg-white/95 p-6 shadow-panel ring-1 ring-white/60 sm:p-10">
    <div class="space-y-4">
      <p class="text-sm font-semibold uppercase tracking-wide text-ink/60">Field Programs</p>
      <h2 class="text-2xl font-semibold text-ink">Where BelizeKids shows up every day</h2>
      <p class="text-ink/70">
        The nonprofit operates year-round across the cayes, building capacity alongside Belizean educators, nurses, and
        conservationists.
      </p>
    </div>
    <div class="grid gap-5 lg:grid-cols-3">
      {initiatives.map((initiative) => (
        <article
          class="flex h-full flex-col rounded-[28px] border border-white/80 bg-fog/80 p-6 text-ink/70 shadow"
          key={initiative.title}
        >
          <h3 class="text-xl font-semibold text-ink">{initiative.title}</h3>
          <p class="mt-3 flex-1 text-sm">{initiative.summary}</p>
          <ul class="mt-4 list-disc space-y-1 pl-5 text-sm">
            {initiative.focus.map((item) => (
              <li key={item}>{item}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </section>

  <section class="space-y-8 rounded-apple bg-white/95 p-6 shadow-panel ring-1 ring-white/60 sm:p-10">
    <div class="space-y-3">
      <h2 class="text-2xl font-semibold text-ink">Stories from the islands</h2>
      <p class="text-ink/70">
        Each program is co-designed with community partners so the impact lasts well beyond a single visit.
      </p>
    </div>
    <div class="grid gap-5 md:grid-cols-3">
      {stories.map((story) => (
        <article
          class="rounded-[28px] border border-white/80 bg-fog/70 p-5 text-ink/70 shadow"
          key={story.title}
        >
          <h3 class="text-lg font-semibold text-ink">{story.title}</h3>
          <p class="mt-3 text-sm">{story.body}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="space-y-6 rounded-apple bg-white/95 p-6 shadow-panel ring-1 ring-white/60 sm:p-10">
    <div class="space-y-3">
      <h2 class="text-2xl font-semibold text-ink">Gallery</h2>
      <p class="text-ink/70">Scenes from clinics, classrooms, and reef expeditions powered by BelizeKids.</p>
    </div>
    <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3">
      {belizeKidsGallery.map((asset) => (
        <figure
          key={asset.id}
          class="flex h-full flex-col gap-3 rounded-[32px] border border-white/80 bg-white p-4 shadow-panel"
        >
          <img src={asset.path} alt={asset.alt} loading="lazy" class="h-56 w-full rounded-[28px] object-cover" />
          <figcaption class="text-sm text-ink/70">{asset.name}</figcaption>
        </figure>
      ))}
    </div>
  </section>

  <section class="space-y-6 rounded-apple bg-gradient-to-br from-brand/15 via-brand-soft/10 to-white p-8 text-center shadow-panel">
    <h2 class="font-display text-3xl text-ink">Join the next BelizeKids expedition</h2>
    <p class="text-lg text-ink/80">
      Volunteers, educators, and health leaders are always needed for upcoming clinics and STEM camps. Share your
      interest and we&apos;ll connect you with the right program lead.
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <a class="btn btn-ink" href="mailto:info@belizekids.org">
        Email BelizeKids
      </a>
      <a
        class="btn btn-brand"
        href="https://belizekids.org/"
        target="_blank"
        rel="noopener"
      >
        Donate or sponsor
      </a>
    </div>
  </section>
</BaseLayout>
