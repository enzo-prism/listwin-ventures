---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Privacy Policy';
const pageDescription = 'Privacy commitments and data handling practices for Listwin Ventures.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <h1 class="text-3xl font-semibold">Privacy Policy</h1>
  <p class="mt-6 text-slate-600">
    A detailed privacy statement will be published as part of the rebuild discovery process. Until
    then, please contact
    <a href="mailto:dj22listwin@gmail.com">dj22listwin@gmail.com</a>
    with any data or privacy questions.
  </p>
</BaseLayout>
